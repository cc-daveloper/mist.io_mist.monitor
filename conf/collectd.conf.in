FQDNLookup true
Interval 10
Timeout 2
ReadThreads 5
#
PIDFile "${buildout:directory}/var/collectd.pid"
LoadPlugin logfile

<Plugin logfile>
	LogLevel "debug"
	File STDOUT
	Timestamp true
	PrintSeverity false
</Plugin>

LoadPlugin network
LoadPlugin write_graphite
<LoadPlugin perl>
	Globals true
</LoadPlugin>
LoadPlugin match_regex
LoadPlugin target_set

LoadPlugin rrdtool
#LoadPlugin write_mongodb

<Plugin rrdtool>
        DataDir "${buildout:directory}/var/rrd"
        RandomTimeout 3
</Plugin>

<Plugin network>
	# client setup:
	<Listen "0.0.0.0" "25826">
		SecurityLevel Encrypt
		AuthFile "${buildout:directory}/conf/collectd.passwd"
		Interface "eth0"
	</Listen>
	MaxPacketSize 1024
	ReportStats true
	CacheFlush 1800
</Plugin>

