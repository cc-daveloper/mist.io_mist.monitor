<Plugin write_graphite>
  <Carbon>
    Host "localhost"
    Port "2003"
    Prefix "mist-"
    Postfix ""
    StoreRates false
    AlwaysAppendDS false
    EscapeCharacter "_"
  </Carbon>
</Plugin>


Include "collectd.conf.local"

