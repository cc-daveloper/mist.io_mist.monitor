FQDNLookup true
Interval 10
Timeout 2
ReadThreads 5

PIDFile "${buildout:directory}/var/collectd.pid"

LoadPlugin logfile
<Plugin logfile>
    LogLevel "debug"
    File STDOUT
    Timestamp true
    PrintSeverity false
</Plugin>

<LoadPlugin perl>
    Globals true
</LoadPlugin>
LoadPlugin match_regex
LoadPlugin target_set

#LoadPlugin rrdtool
#<Plugin rrdtool>
#        DataDir "${buildout:directory}/var/rrd"
#        RandomTimeout 3
#</Plugin>

LoadPlugin network
<Plugin network>
    # server
    <Listen "0.0.0.0" "25826">
        SecurityLevel Encrypt
        AuthFile "${buildout:directory}/conf/collectd.passwd"
        Interface "eth0"
        MaxPacketSize 1024
        ReportStats true
        CacheFlush 1800
    </Listen>
    # client
    Server "127.0.0.1" "25827"
    # proxy
    Forward true
</Plugin>

