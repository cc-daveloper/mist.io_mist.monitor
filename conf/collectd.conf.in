LoadPlugin write_graphite
<Plugin write_graphite>
  <Carbon>
    Host "localhost"
    Port "2013"
    Prefix "mist-"
    Postfix ""
    StoreRates false
    AlwaysAppendDS false
    EscapeCharacter "_"
  </Carbon>
</Plugin>


Include "${buildout:directory}/conf/collectd.conf.local"

